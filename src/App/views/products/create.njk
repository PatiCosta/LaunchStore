{% extends "layout.njk" %}

{% block content %}

    <section class="container form">
        <form method="POST" action="/products" enctype="multipart/form-data">
            <div class="header">
                <h3>Cadastrar produto {{productId}}</h3>
            </div>

            <div class="fields">
                {% include 'products/fields.njk' %}
            </div>

            <div class="button">
                <button type="submit">Salvar</button>
            </div>            
        </form>
    </section>

{% endblock content %}